@model MgWindManager.Models.Windmill

@{
ViewData["Title"] = "Edytuj Wiatrak";
}

<div class="container">
    <h1 class="display-4 text-center">Edytuj Wiatrak: @Model.Name</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Update" asp-controller="Windmill" method="post">
                <input type="hidden" name="Guid" value="@Model.Guid" />
                <div class="form-group">
                    <label for="Name">Nazwa:</label>
                    <input type="text" id="Name" name="Name" class="form-control" value="@Model.Name" />
                </div>
                <div class="form-group">
                    <label for="Description">Opis:</label>
                    <input type="text" id="Description" name="Description" class="form-control" value="@Model.Description" />
                </div>
                <div class="form-group">
                    <label for="Latitude">Szerokość geograficzna:</label>
                    <input type="number" id="Latitude" name="Latitude" class="form-control" value="@Model.Latitude" />
                </div>
                <div class="form-group">
                    <label for="Longitude">Długość geograficzna:</label>
                    <input type="number" id="Longitude" name="Longitude" class="form-control" value="@Model.Longitude" />
                </div>
                <div class="form-group">
                    <label for="Height">Wysokość:</label>
                    <input type="number" id="Height" name="Height" class="form-control" value="@Model.Height" />
                </div>
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </form>

        </div>
    </div>
</div>

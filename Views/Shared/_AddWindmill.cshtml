@* @model MgWindManager.Models.Windmill *@
@model MgWindManager.Models.Dto.WindmillAddRequest

@using (Html.BeginForm("AddWindmill", "Windmill", FormMethod.Post))
{
    @* @Html.ValidationSummary() *@
    
    <span>Nazwa</span> @Html.TextBoxFor(x => x.Windmill.Name)
    <span>Opis</span>@Html.TextBoxFor(x => x.Windmill.Description)
    <span>Lokalizacja, to będzie na jednej wysokości, obok siebie, ew do wklejania przygotować <formularz class=""></formularz></span>
    <span>Szerokość Geo(Lat)</span>@Html.TextBoxFor(x => x.Windmill.Latitude)
    <span>Długość Geo(Lon)</span> @Html.TextBoxFor(x => x.Windmill.Longitude)
    <span>Wysokosc</span>@Html.TextBoxFor(x => x.Windmill.Height)

    <div class="form-group">
        <label>WindPark</label>
        <select asp-for="Windmill.WindParkId" class="form-control" asp-items="@(new SelectList(Model.WindParks, "Guid", "Name"))">
            <option value="">Wybierz WindPark</option>
        </select>
    </div>
